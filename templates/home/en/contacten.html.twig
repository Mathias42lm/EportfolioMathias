{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<section class="container py-5">
    <div class="row g-5">
        
        <div class="col-lg-5">
            <h1 class="display-5 fw-bold mb-4">Let's talk about your <span class="text-primary">project</span>.</h1>
            <p class="lead text-muted mb-5">
                I'm currently open to new opportunities and collaborations. 
                Feel free to reach out via the form or through my social networks.
            </p>

            <div class="mb-4">
                <div class="d-flex align-items-center mb-3">
                    <div class="btn btn-primary btn-sm rounded-circle me-3"><i class="bi bi-geo-alt"></i></div>
                    <span>Based in Paris, France (Remote available)</span>
                </div>
                <div class="d-flex align-items-center mb-3">
                    <div class="btn btn-primary btn-sm rounded-circle me-3"><i class="bi bi-envelope"></i></div>
                    <span>hello@yourdomain.com</span>
                </div>
            </div>

            <hr class="my-5 w-25">

            <h5 class="mb-3">Connect with me</h5>
            <div class="d-flex gap-3">
                <a href="#" class="btn btn-outline-dark btn-sm shadow-sm">LinkedIn</a>
                <a href="#" class="btn btn-outline-dark btn-sm shadow-sm">GitHub</a>
                <a href="#" class="btn btn-outline-dark btn-sm shadow-sm">Twitter / X</a>
            </div>
        </div>

        <div class="col-lg-7">
            <div class="card border-0 shadow-lg p-4 p-md-5">
                {% if app.request.query.get('success') %}
                    <div class="alert alert-success mb-4">
                        Thank you! Your message has been sent successfully.
                    </div>
                {% endif %}

                <form action="#" method="post">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Your Name</label>
                            <input type="text" class="form-control form-control-lg bg-light" placeholder="e.g. John Doe" required>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Email Address</label>
                            <input type="email" class="form-control form-control-lg bg-light" placeholder="john@example.com" required>
                        </div>
                        <div class="col-12 mt-4">
                            <label class="form-label fw-semibold">Subject</label>
                            <input type="text" class="form-control form-control-lg bg-light" placeholder="e.g. Freelance Inquiry / Job Opportunity">
                        </div>
                        <div class="col-12 mt-4">
                            <label class="form-label fw-semibold">Message</label>
                            <textarea class="form-control form-control-lg bg-light" rows="6" placeholder="Tell me more about your project..." required></textarea>
                        </div>
                        <div class="col-12 mt-4 d-grid">
                            <button type="submit" class="btn btn-primary btn-lg py-3 fw-bold shadow">
                                Send Message ðŸš€
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>
{% endblock %}